<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.example.android.meinforme.views.register_user"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/defaultBackgroud"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

<LinearLayout
    android:layout_centerInParent="true"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

        <EditText
            android:layout_height="wrap_content"
            android:hint="@string/registry_hint"
            android:layout_width="match_parent"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/matriculaAluno"
            android:layout_marginTop="8dp"
            android:inputType="number"
            android:textSize="16sp"
            android:ems="15"/>

        <EditText
            android:id="@+id/codigoEscolaAluno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CÃ³digo que a escola forneceu"
            android:textSize="16sp"
            android:inputType="number"
            android:ems="10"
            android:maxLength="10"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

        <EditText
            android:id="@+id/cadNomeAluno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Nome Completo"
            android:maxLength="50"
            android:inputType="textCapWords"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/cadEmailAluno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Email"
            android:maxLength="50"
            android:inputType="textEmailAddress"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/cadSenhaAluno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Senha"
            android:maxLength="20"
            android:inputType="textPassword"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Serie"
                    android:textSize="16sp"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Turma"
                    android:textSize="16sp"
                    android:layout_alignParentLeft="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/serie"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />

                <Spinner
                    android:id="@+id/turma"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"/>
            </RelativeLayout>

        </LinearLayout>

        <Button
            android:background="@drawable/shape_orangebuttom"
            android:text="@string/button_continue_text"
            android:layout_height="wrap_content"
            android:id="@+id/cadAcessarAluno"
            android:textColor="@color/white"
            android:layout_marginTop="16sp"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:textStyle="bold"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearGif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#40000000"
        android:gravity="center"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/imggif"
            android:layout_width="wrap_content"
            android:layout_height="100sp"
            android:clickable="true"
            android:src="@drawable/load3"/>
    </LinearLayout>
</RelativeLayout>
