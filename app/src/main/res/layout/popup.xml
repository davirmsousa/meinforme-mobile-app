<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.example.android.meinforme.popup"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/transparent"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/layouPopUp">

    <ScrollView
        android:background="@drawable/shape_popupshape"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingBottom="8dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="8dp">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:id="@+id/messageBody"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:textSize="15sp" />

            <Button
                android:background="@drawable/shape_orangebuttom"
                android:text="@string/button_continue_text"
                android:id="@+id/buttonPopupContinue"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:layout_width="200dp"
                android:textSize="13sp"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>